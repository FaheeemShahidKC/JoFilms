<%-include("../admin/leyouts/header.ejs")%>

    <div class="main-content">
        <div class="page-content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="container">
                            <h1>Edit Portfolio</h1>
                            <hr>
                            <div class="row">
                                <!-- left column -->
                                <div class="col-md-3">
                                    <div class="text-center" >
                                        <% if(portfolioData && portfolioData.images){%>
                                            <img src="/profile/<%= portfolioData.images %>"  class="rounded-circle admin-profile" alt="avatar">
                                            <%}else{%>
                                            <img src="/profile/150-1503945_transparent-user-png-default-user-image-png-png.png" style="width: 150px;" class="rounded-circle" alt="avatar"> 
                                                <%} %>
                                        
                                        <h6>Upload a different photo...</h6>

                                        <input type="file" class="form-control" id="imageInput" name="image" accept="image/*">
                                    </div>
                                </div>

                                <!-- edit form column -->
                                <div class="col-md-9 personal-info">
                                    <h3>Portfolio info</h3>
                                    <form class="form-horizontal" >
                                        <div class="form-group">
                                            <label class="col-md-3 control-label">Name</label>
                                            <div class="col-md-8">
                                                <input class="form-control" type="text" id="nameInput">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-lg-3 control-label">About</label>
                                            <div class="col-lg-8">
                                                <textarea id="aboutInput" class="form-control" maxlength="225" rows="3"
                                                placeholder="Tell about yourself."></textarea>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label class="col-md-3 control-label"></label>
                                            <div class="col-md-8">
                                                <input id="addPortfolio" type="button" class="btn btn-primary" value="Save Changes">
                                                <span></span>
                                                <input type="reset" class="btn btn-outline-danger" value="Cancel">
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                        <hr>

                    </div>

                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("addPortfolio").addEventListener("click", async function (e) {
                e.preventDefault();

                // Get form data
                const imageInput = document.getElementById("imageInput");
                const nameInput = document.getElementById("nameInput");
                const aboutInput = document.getElementById("aboutInput");

                // Validate form fields
                if (!imageInput.files[0] || !nameInput.value.trim() || !aboutInput.value.trim()) {
                    Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: "Please fill in all the fields.",
                    });
                    return;
                }

                // Prepare form data
                const formData = new FormData();
                formData.append("image", imageInput.files[0]);
                formData.append("name", nameInput.value.trim());
                formData.append("about", aboutInput.value.trim());

                try {
                    console.log("am in before axios");
                    // Send POST request to server
                    const response = await axios.post("/admin/editPortfolio", formData, {
                        headers: {
                            "Content-Type": "multipart/form-data",
                        },
                    });
                    console.log("am in after axios");
                    // Check response status
                    if (response.data.success) {
                        Swal.fire({
                            icon: "success",
                            title: "Success",
                            text: "Portfolio updated successfully.",
                        }).then(() => {
                            // Redirect to portfolio page or perform any other action
                            window.location.href = "/admin/Portfolio";
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Oops...",
                            text: "Failed to update portfolio.",
                        });
                    }
                } catch (error) {
                    console.error("Error:", error);
                    Swal.fire({
                        icon: "error",
                        title: "Oops...",
                        text: "Failed to update portfolio. Please try again.",
                    });
                }
            });
        });
    </script>

    <%-include("../admin/leyouts/footer.ejs")%>
       